<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}OYSTERCULT{% endblock %}</title>
        
        {# Favicon #}
        <link rel="icon" href="{{ asset('react-assets/favicon.ico') }}">
        
        {# Font Awesome #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        
        {# Google Fonts #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=SF+Pro+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
        
        {# Chart.js #}
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        
        {# CSS personnalisé #}
        <link rel="stylesheet" href="{{ asset('react-assets/main.css') }}">
        <link rel="stylesheet" href="{{ asset('react-assets/custom.css') }}">
        
        {% block stylesheets %}{% endblock %}
    </head>
    <body class="bg-brand-darker text-white font-sans">
        <div class="app-container">
            {# Sidebar #}
            <aside class="sidebar glass-effect" id="sidebar">
                <div class="sidebar-header">
                    <div class="logo">
                        <img src="{{ asset('react-assets/images/logo.png') }}" alt="OYSTERCULT Logo" class="logo-img">
                        <span class="logo-text">OYSTERCULT</span>
                    </div>
                    <button id="sidebar-toggle-btn" class="sidebar-toggle">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
                
                <nav class="sidebar-nav">
                    <ul class="nav-list">
                        <li class="nav-item {% if app.request.get('_route') starts with 'app_dashboard' %}active{% endif %}">
                            <a href="{{ path('app_dashboard_index') }}" class="nav-link">
                                <i class="fas fa-tachometer-alt nav-icon"></i>
                                <span class="nav-text">Tableau de bord</span>
                            </a>
                        </li>
                        <li class="nav-item {% if app.request.get('_route') starts with 'app_inventory' %}active{% endif %}">
                            <a href="{{ path('app_inventory_index') }}" class="nav-link">
                                <i class="fas fa-box nav-icon"></i>
                                <span class="nav-text">Stock</span>
                            </a>
                        </li>
                        
                        <li class="nav-section-title">GESTION DES STOCKS</li>
                        
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-water nav-icon"></i>
                                <span class="nav-text">Bassins</span>
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-table nav-icon"></i>
                                <span class="nav-text">Tables</span>
                            </a>
                        </li>
                        
                        <li class="nav-section-title">INSTALLATIONS</li>
                        
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-clipboard-list nav-icon"></i>
                                <span class="nav-text">Inventaire</span>
                            </a>
                        </li>
                        
                        <li class="nav-section-title">ADMINISTRATION</li>
                        
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-cog nav-icon"></i>
                                <span class="nav-text">Configuration</span>
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-user-shield nav-icon"></i>
                                <span class="nav-text">Mot de passe</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                
                <div class="sidebar-footer">
                    <a href="{{ path('app_logout') }}" class="logout-btn">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Déconnexion</span>
                    </a>
                </div>
            </aside>
            
            <main class="main-content">
                {# Header #}
                <header class="main-header glass-effect">
                    <div class="header-left">
                        <div class="logo-container">
                            <div class="logo-icon">
                                <div class="rotating-gear">
                                    <i class="fas fa-cog"></i>
                                </div>
                            </div>
                            <span class="logo-text">OYSTERCULT</span>
                        </div>
                    </div>
                    
                    <div class="header-right">
                        <div class="search-box">
                            <i class="fas fa-search"></i>
                            <input type="text" placeholder="Rechercher...">
                        </div>
                        
                        <div class="header-actions">
                            <button class="action-btn">
                                <i class="fas fa-bell"></i>
                                <span class="notification-badge">2</span>
                            </button>
                            
                            <div class="user-profile">
                                <img src="{{ asset('react-assets/images/avatar.png') }}" alt="User" class="user-avatar">
                            </div>
                        </div>
                    </div>
                </header>
                
                <div class="content-wrapper">
                    {% block body %}{% endblock %}
                </div>
            </main>
        </div>
        
        {# Scripts #}
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Toggle sidebar
                const sidebarToggleBtn = document.getElementById('sidebar-toggle-btn');
                const sidebar = document.getElementById('sidebar');
                const mainContent = document.querySelector('.main-content');
                
                if (sidebarToggleBtn) {
                    sidebarToggleBtn.addEventListener('click', function() {
                        sidebar.classList.toggle('collapsed');
                        mainContent.classList.toggle('expanded');
                    });
                }
            });
        </script>
        
        {% block javascripts %}{% endblock %}
    </body>
</html>
