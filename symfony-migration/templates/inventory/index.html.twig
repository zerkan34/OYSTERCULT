{% extends 'base.html.twig' %}

{% block title %}Inventaire - OYSTERCULT{% endblock %}

{% block page_title %}Inventaire{% endblock %}

{% block body %}
<div class="space-y-6" role="main" aria-label="Gestion de l'inventaire ostréicole">
    <div class="flex items-center space-x-3">
        <div class="relative">
            <div class="absolute inset-0 bg-brand-primary/20 blur-xl rounded-full" aria-hidden="true"></div>
            <i class="fas fa-box text-brand-primary relative z-10"></i>
        </div>
        <h1 class="text-2xl font-bold text-white">Inventaire</h1>
    </div>

    {# Onglets de navigation #}
    <div class="glass-effect rounded-xl p-2">
        <div class="flex overflow-x-auto hide-scrollbar">
            <button class="tab-button active" data-tab="tables">
                <i class="fas fa-table-cells mr-2"></i>
                Tables
            </button>
            <button class="tab-button" data-tab="pools">
                <i class="fas fa-water mr-2"></i>
                Bassins
            </button>
            <button class="tab-button" data-tab="storage">
                <i class="fas fa-warehouse mr-2"></i>
                Stockage
            </button>
            <button class="tab-button" data-tab="purchases">
                <i class="fas fa-shopping-cart mr-2"></i>
                Achats
            </button>
        </div>
    </div>

    {# Barre d'actions #}
    <div class="flex flex-wrap justify-between items-center gap-4">
        <div class="flex items-center space-x-2">
            <div class="relative">
                <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-white/60"></i>
                <input type="text" placeholder="Rechercher..." class="bg-white/5 border border-white/10 rounded-lg pl-10 pr-4 py-2 text-white w-64 focus:outline-none focus:ring-2 focus:ring-brand-primary">
            </div>
            <button class="btn-icon" title="Filtrer">
                <i class="fas fa-filter"></i>
            </button>
        </div>
        <div class="flex space-x-2">
            <button class="btn btn-primary">
                <i class="fas fa-plus mr-2"></i>
                Ajouter
            </button>
            <button class="btn btn-secondary">
                <i class="fas fa-download mr-2"></i>
                Exporter
            </button>
        </div>
    </div>

    {# Contenu des onglets #}
    <div class="tab-content" id="tables-content">
        <div class="glass-effect rounded-xl p-6">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-xl font-semibold text-white">Tables ostréicoles</h2>
                <div class="text-sm text-white/60">{{ oysterTables|length }} tables</div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {% for table in oysterTables %}
                <div class="bg-white/5 rounded-lg p-4 hover:bg-white/10 transition-all duration-200 cursor-pointer">
                    <div class="flex justify-between items-center mb-3">
                        <div class="flex items-center space-x-3">
                            <div class="w-3 h-3 rounded-full bg-{% if table.occupation > 80 %}green-500{% elseif table.occupation > 60 %}yellow-500{% else %}red-500{% endif %}" role="presentation"></div>
                            <div>
                                <div class="text-base text-white">{{ table.name }}</div>
                                <div class="text-xs text-white/70">{{ table.type }}</div>
                            </div>
                        </div>
                        <div class="text-right">
                            <div class="text-base font-semibold text-white">{{ table.occupation }}%</div>
                            <div class="text-xs text-white/70">occupée</div>
                        </div>
                    </div>
                    <div class="flex justify-between text-sm text-white/60">
                        <div>Récolte: {{ table.harvestDate }}</div>
                        <div>
                            <button class="text-brand-primary hover:text-brand-secondary transition-colors">
                                <i class="fas fa-eye mr-1"></i> Détails
                            </button>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="tab-content hidden" id="pools-content">
        <div class="glass-effect rounded-xl p-6">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-xl font-semibold text-white">Bassins de purification</h2>
                <div class="text-sm text-white/60">{{ purificationPools|length }} bassins</div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {% for pool in purificationPools %}
                <div class="bg-white/5 rounded-lg p-4 hover:bg-white/10 transition-all duration-200 cursor-pointer">
                    <div class="flex justify-between items-center mb-3">
                        <div class="flex items-center space-x-3">
                            <div class="w-3 h-3 rounded-full bg-{% if (pool.currentLoad / pool.capacity * 100) > 80 %}green-500{% elseif (pool.currentLoad / pool.capacity * 100) > 60 %}yellow-500{% else %}red-500{% endif %}" role="presentation"></div>
                            <div>
                                <div class="text-base text-white">{{ pool.name }}</div>
                                <div class="text-xs text-white/70">{{ pool.type }}</div>
                            </div>
                        </div>
                        <div class="text-right">
                            <div class="text-base font-semibold text-white">{{ (pool.currentLoad / pool.capacity * 100)|round }}%</div>
                            <div class="text-xs text-white/70">capacité</div>
                        </div>
                    </div>
                    <div class="mt-3 text-sm text-white/60">
                        <div class="flex items-center justify-between">
                            <span>Charge actuelle:</span>
                            <span class="font-medium text-white">{{ pool.currentLoad }} / {{ pool.capacity }} kg</span>
                        </div>
                    </div>
                    <div class="flex justify-end mt-3">
                        <button class="text-brand-primary hover:text-brand-secondary transition-colors text-sm">
                            <i class="fas fa-eye mr-1"></i> Détails
                        </button>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="tab-content hidden" id="storage-content">
        <div class="glass-effect rounded-xl p-6">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-xl font-semibold text-white">Zones de stockage</h2>
                <div class="text-sm text-white/60">{{ storageLocations|keys|length }} zones</div>
            </div>

            <div class="space-y-6">
                {% for location, products in storageLocations %}
                <div class="bg-white/5 rounded-lg p-4">
                    <div class="flex justify-between items-center mb-4">
                        <h3 class="text-lg font-medium text-white">{{ location }}</h3>
                        <div class="text-sm text-white/60">{{ products|length }} produits</div>
                    </div>
                    
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="text-left text-white/70 text-sm">
                                    <th class="pb-2">Produit</th>
                                    <th class="pb-2">Quantité</th>
                                    <th class="pb-2">Date d'arrivée</th>
                                    <th class="pb-2">Date d'expiration</th>
                                    <th class="pb-2">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for product in products %}
                                <tr class="border-t border-white/10 text-white">
                                    <td class="py-3">{{ product.name }}</td>
                                    <td class="py-3">{{ product.quantity }}</td>
                                    <td class="py-3">{{ product.arrivalDate }}</td>
                                    <td class="py-3">{{ product.expiryDate }}</td>
                                    <td class="py-3">
                                        <div class="flex space-x-2">
                                            <button class="btn-icon-sm text-brand-primary hover:text-brand-secondary" title="Voir">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn-icon-sm text-yellow-500 hover:text-yellow-400" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn-icon-sm text-red-500 hover:text-red-400" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="tab-content hidden" id="purchases-content">
        <div class="glass-effect rounded-xl p-6">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-xl font-semibold text-white">Achats</h2>
                <button class="btn btn-primary btn-sm">
                    <i class="fas fa-plus mr-2"></i>
                    Nouvel achat
                </button>
            </div>

            <div class="bg-white/5 rounded-lg p-4 text-center py-8">
                <i class="fas fa-shopping-cart text-4xl text-white/30 mb-4"></i>
                <h3 class="text-lg font-medium text-white mb-2">Aucun achat en cours</h3>
                <p class="text-white/60 mb-4">Commencez par créer un nouvel achat</p>
                <button class="btn btn-primary">
                    <i class="fas fa-plus mr-2"></i>
                    Créer un achat
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Gestion des onglets
            const tabButtons = document.querySelectorAll('.tab-button');
            const tabContents = document.querySelectorAll('.tab-content');
            
            tabButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Désactiver tous les onglets
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    tabContents.forEach(content => content.classList.add('hidden'));
                    
                    // Activer l'onglet cliqué
                    this.classList.add('active');
                    const tabId = this.getAttribute('data-tab');
                    document.getElementById(`${tabId}-content`).classList.remove('hidden');
                });
            });
            
            // Animation des cartes
            const cards = document.querySelectorAll('.glass-effect, .bg-white\\/5');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.boxShadow = '0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = '';
                });
            });
        });
    </script>
    <style>
        .tab-button {
            padding: 0.75rem 1.5rem;
            color: rgba(255, 255, 255, 0.7);
            border-radius: 0.5rem;
            font-weight: 500;
            transition: all 0.2s ease;
            white-space: nowrap;
        }
        
        .tab-button:hover {
            color: white;
            background-color: rgba(255, 255, 255, 0.05);
        }
        
        .tab-button.active {
            color: white;
            background-color: rgba(var(--color-brand-primary), 0.2);
        }
        
        .hide-scrollbar::-webkit-scrollbar {
            display: none;
        }
        
        .hide-scrollbar {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
        
        .btn-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.5rem;
            background-color: rgba(255, 255, 255, 0.05);
            color: white;
            transition: all 0.2s ease;
        }
        
        .btn-icon:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .btn-icon-sm {
            width: 30px;
            height: 30px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.375rem;
            transition: all 0.2s ease;
        }
        
        .btn-sm {
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
        }
    </style>
{% endblock %}
