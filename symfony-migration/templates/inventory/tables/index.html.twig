{% extends 'base.html.twig' %}

{% block title %}Tables d'huîtres - OYSTERCULT{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/inventory.css') }}">
{% endblock %}

{% block body %}
<div class="inventory-container">
    <div class="page-header">
        <h1>Gestion des Tables d'Huîtres</h1>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTableModal">
            <i class="fas fa-plus"></i> Nouvelle Table
        </button>
    </div>

    <div class="tables-grid">
        {% for table in tables %}
            <div class="table-card" data-table-id="{{ table.id }}">
                <div class="table-header">
                    <h3>{{ table.name }}</h3>
                    <span class="badge {{ table.status == 'active' ? 'bg-success' : 'bg-warning' }}">
                        {{ table.status == 'active' ? 'Active' : 'En maintenance' }}
                    </span>
                </div>
                <div class="table-info">
                    <p><i class="fas fa-map-marker-alt"></i> {{ table.location }}</p>
                    <p><i class="fas fa-layer-group"></i> Capacité: {{ table.capacity }}</p>
                    <p><i class="fas fa-water"></i> Profondeur: {{ table.depth }}m</p>
                </div>
                <div class="table-stats">
                    <div class="stat-item">
                        <span class="stat-label">Occupation</span>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" 
                                 style="width: {{ (table.currentOccupation / table.capacity) * 100 }}%">
                                {{ table.currentOccupation }}/{{ table.capacity }}
                            </div>
                        </div>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">Dernière maintenance</span>
                        <span>{{ table.lastMaintenance|date('d/m/Y') }}</span>
                    </div>
                </div>
                <div class="table-actions">
                    <button class="btn btn-info btn-sm" onclick="viewTableDetails('{{ table.id }}')">
                        <i class="fas fa-eye"></i> Détails
                    </button>
                    <button class="btn btn-warning btn-sm" onclick="editTable('{{ table.id }}')">
                        <i class="fas fa-edit"></i> Modifier
                    </button>
                    <button class="btn btn-danger btn-sm" onclick="deleteTable('{{ table.id }}')">
                        <i class="fas fa-trash"></i> Supprimer
                    </button>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{# Modal Nouvelle Table #}
<div class="modal fade" id="addTableModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nouvelle Table d'Huîtres</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                {{ include('inventory/tables/_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/inventory/tables.js') }}"></script>
{% endblock %}
