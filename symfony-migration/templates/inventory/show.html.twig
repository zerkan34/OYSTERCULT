{% extends 'base.html.twig' %}

{% block title %}Détails du produit - OYSTERCULT{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/inventory.css') }}">
{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="inventory-container">
            <div class="page-header">
                <h1>{{ product.name }}</h1>
                
                <a href="{{ path('app_inventory_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Détails du produit</h5>
                </div>
                
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Nom:</label>
                                <p>{{ product.name }}</p>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Description:</label>
                                <p>{{ product.description|default('Aucune description') }}</p>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Prix:</label>
                                <p>{{ product.price|number_format(2, ',', ' ') }} €</p>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Quantité en stock:</label>
                                <p>{{ product.quantity }} {{ product.unit }}</p>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Quantité minimale:</label>
                                <p>{{ product.minQuantity }} {{ product.unit }}</p>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Statut:</label>
                                <p>
                                    {% if product.status == 'available' %}
                                        <span class="badge bg-success">Disponible</span>
                                    {% elseif product.status == 'out_of_stock' %}
                                        <span class="badge bg-danger">Rupture de stock</span>
                                    {% elseif product.status == 'discontinued' %}
                                        <span class="badge bg-secondary">Discontinué</span>
                                    {% else %}
                                        <span class="badge bg-info">{{ product.status }}</span>
                                    {% endif %}
                                </p>
                            </div>
                            
                            {% if product.storageLocation %}
                            <div class="mb-3">
                                <label class="form-label fw-bold">Emplacement de stockage:</label>
                                <p>{{ product.storageLocation.name }}</p>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="card-footer">
                    <div class="d-flex gap-2 justify-content-end">
                        <a href="{{ path('app_inventory_edit', {'id': product.id}) }}" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <a href="{{ path('app_inventory_transfer', {'id': product.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-exchange-alt"></i> Transférer
                        </a>
                        <form method="post" action="{{ path('app_inventory_delete', {'id': product.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button class="btn btn-danger">
                                <i class="fas fa-trash"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
